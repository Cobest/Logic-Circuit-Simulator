{
  "version": "0.5.0",
  "dependencies": {
    "@popperjs/core": "^2.9.1",
    "bootstrap": "^4.3.1",
    "fp-ts": "^2.9.5",
    "io-ts": "^2.2.16",
    "jquery": "^3.5.1"
  },
  "devDependencies": {
    "@types/jquery": "^3.5.1",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "esbuild": "^0.14.2",
    "eslint": "^7.32.0",
    "npm-watch": "^0.9.0",
    "ts-loader": "^8.0.18",
    "type-coverage": "^2.17.2",
    "typescript": "^4.4.2",
    "typescript-coverage-report": "^0.5.1"
  },
  "scripts": {
    "lint": "eslint . --ext .ts",
    "server": "python3 -m http.server --cgi 8088",
    "esbuild": "./node_modules/.bin/esbuild --bundle --sourcemap --minify --loader:.html=text  --loader:.css=text simulator/src/LogicEditor.ts --outfile=simulator/lib/bundle.js && tools/insert_md5_into_index.sh",
    "esbuild-watch": "npm-watch esbuild",
    "babel-disabled": "babel --extensions '.ts' simulator/src -d lib",
    "coverage": "typescript-coverage-report"
  },
  "watch": {
    "esbuild": {
      "patterns": [
        "simulator"
      ],
      "extensions": "ts,html,css"
    }
  }
}

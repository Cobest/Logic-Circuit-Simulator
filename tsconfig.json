{
    "compilerOptions": {
        "allowJs": true,
        "module": "es6",
        "target": "es5",
        "outDir": "simulator/js",
        "lib": [
            "DOM",
            "ES2016",
            "ES2016.Array.Include"
        ],
        "downlevelIteration": true,
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        // "typeRoots": [
        //     "../../node_modules",
        //     "../../node_modules/@types",
        //     "../definitions"
        // ],
    },
    "include": [
        "simulator/src"
    ],
}